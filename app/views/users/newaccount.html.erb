<h3 class="title p-3">new account page</h3>
<%= form_with url: user_create_path, class: "form", method: :post do |form| %>

    <%= form.label :username, class: "label" %>
    <%= form.text_field :username, class: "input" %>

    <%= form.label :password, class: "label" %>
    <%= form.password_field :password, class: "input" %>

    <%= form.label :email, class: "label" %>
    <%= form.email_field :email, class: "input" %>

    <% hidden_field_tag(:powerlevel, 1) %>
    <%= form.submit "Create", class: "button is-info p-2" %>

<% end %>